<view class="login-page">
  <!-- content -->
  <view class="we-title">
    欢迎来到
  </view>

  <view class="phone-number">
    <input class=""
     maxlength="11"
     data-phone="phone"
     bindinput="onPhoneChange"
     auto-focus
     placeholder="手机号码"/>
  </view>


  <view class="code-container">
    <code-number
    bind:onDisableClick="onGetCodeDisable"
    bind:onGetCode="onGetCode" disabled="{{sendCodeBtnDisabled}}">
      <view class="code-numer">
       <input
        maxlength="4"
        data-code="code"
        bindinput="onCodeChange"
        placeholder="验证码" />
      </view>
    </code-number>
  </view>

  <view class="remind flex-cm">
      <!-- <image bindtouchend="toAgree" class="check-image" src="./images/checked.png" /> -->
      <icon-font bindtouchend="toAgree" name="iconzhuce-xuanzhong3" size="{{15}}" color="{{checked? '#FF3232' : '#999999'}}" />
      <view class="view-text">已阅读并同意<text-link
        url="/pages/serviceAgreement/serviceAgreement"
        text="服务协议" />与<text-link
        url="/pages/privacyPolicy/privacyPolicy"
        text="隐私政策" />
      </view>
  </view>

  <view >
     <button
      class="login-btn"
     bindtouchend="login"
     disabled="{{loginBtnDisabled}}">登录</button>
  </view>

</view>