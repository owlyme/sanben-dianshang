<page-container
    pageName="支付成功"
    showNav="{{true}}"
    bgColor="none"
    iconColor="none"
    theme="light"
    useThemeBg="{{true}}"
    >
    <view class="payment-page">
    
      <view class="top-b">
        <view class="icon-b">
          <icon-font name="iconfankuichenggong" size="48" color="#fff"/>
        </view>
        <view class="remind">
          支付成功，恭喜您获得{{points}}积分！
        </view>

        <view class="btns flex-b">
          <button-text type="ghost"
          fontSize="{{12}}"
          bind:tap="backToIndex" >返回首页</button-text>
          <button-text type="ghost"
          bind:tap="viewOrder" 
          fontSize="{{12}}"
          >查看订单</button-text>
        </view>

      </view>
    
      <view class="payment-card-b" style="height: {{scrollViewHeight}}px;">
  
        <!-- <view class="payment-wave"
          wx:if="{{waveBarVisible}}">
          <image src="/images/wave.png" />
        </view> -->

    
        <!--  -->
        <view class="payment-list "  >
          <scroll-view
          id="scroll-view"
          scroll-y="true"
          style="height: {{scrollViewHeight}}px;"
          bindscrolltolower="scrollToLower"
          bindscrolltoupper="scrollToUpper"
          bindscroll="onScroll"
          >
            <!-- <view class="gutter-container"> -->
            <part-title title="热买推荐"></part-title>
             <!-- </view> -->
            <view class="gutter-container">
            <good-list
              goodList="{{goodList}}"
            />
            </view>
          </scroll-view>
        </view>
      </view>
    </view>
  </page-container>