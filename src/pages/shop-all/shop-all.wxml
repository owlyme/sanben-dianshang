    <view class="shop-all-good-page"><page-container
    pageName="门店"
    showNav="{{showNav}}"
    bgColor="#F4F5F6;"
    iconColor="none"
    theme="dark"
    useThemeBg="{{false}}"
    >
      <view class="sticky scroll-b"
        style="top: {{stickyOffsetTop}}px;">
        <card >
          <search-input 
          placeholder="搜索门店名称"
          bind:onChange="onShopNameChange"
          />
          <view class="shop-info flex-b flex-middle">
            <shop-card src="{{shopInfo.pic}}"
            title="{{shopInfo.name}}"
            >
              <view slot="text" class="flex">
                <rate-star rate="{{shopInfo.rate}}"></rate-star>
                <text class="followNumber">{{shopInfo.followNumber}}人关注</text>
              </view>
            </shop-card>
            <!-- <view class="tag">
              <icon-font name="iconguanzhudianpu-weiguanzhu" size="12" />
              关注</view> -->
            <follow-shop-btn shopInfo="{{goodDetail}}" />
          </view>

          <view class="address flex">
            <icon-font size="15" name="icondizhi2" color="#999999" /> 
            <view class="flex flex-middle" style="margin-left: 6rpx">
              <view class="address-info">
                <view class="title">
                  门店地址
                </view>
                <view class="title title-add">
                    {{shopInfo.address}}
                </view>
              </view>
              
              <view class="right">
                <icon-font size="14" name="icondingdan-dianpu-gengduo2" color="#999999" />
              </view>

              <view class="phone" bind:tap="makePhoneCall">
                <icon-font size="24" name="icondianpudianhua" color="#FF3232" />
              </view>
            </view>
          </view>
        </card>
      </view>

      <view class="shop-list-b">
        <list >
          <view class="title">
            <title-contianer>
              <view class="">同城门店·<text >{{shopInSameCityList.length}}</text>家</view>
            </title-contianer>
          </view>
          <list-item 
             textAlign="left"
            wx:for="{{shopInSameCityList}}"
            wx:key="index"
            bind:onClick="shopItemClick"
            >
               <shop-card slot="content" src="{{item.pic}}"
                showAddressIcon="{{true}}"
                title="{{item.name}}"
                text="{{item.address}}"
                />
            </list-item>
        </list>
      </view>

      <view class="shop-list-b">
        <list >
          <view class="title">
            <title-contianer>
              <view class="">全部门店·<text >{{shopInAllPlaceList.length}}</text>家</view>
            </title-contianer>
          </view>
          <list-item 
             textAlign="left"
            wx:for="{{shopInAllPlaceList}}"
            wx:key="index"
            bind:onClick="shopItemClick"
            >
               <shop-card slot="content" src="{{item.pic}}"
                showAddressIcon="{{true}}"
                title="{{item.name}}"
                text="{{item.address}}"
                />
            </list-item>
        </list>
      </view>
  </page-container>

  <sub-navbar-shop index="{{3}}"/>
</view>