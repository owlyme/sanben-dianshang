<view class="search-input-components">
  <view class="search-input-default" wx:if="{{type === 'default'}}">
    <view class="user-action-part flex-middle flex-b" >
    <input
      value="{{keyword}}"
      data-keyword="keyword"
      placeholder="{{placeholder}}"
      bindinput="onInputValueChange"
      />

      <view class="clear-keyword"
        wx:if="{{keywords.length}}"
        bind:tap="clear">
        <image src="/images/close.png" alt="" />
      </view>
    </view>
  </view>

  <view class="search-bar flex" wx:if="{{type === 'indexPage'}}">
    <view class="current-position"
     bind:tap="onAddressClick">
      {{address}}
    </view>

    <view class="search-input-index" >
      <view class="user-action-part flex-middle flex-b" >
        <view class="scan-btn" bind:tap="onScanClick">
          O
        </view>
        <view
          class="search-keywords ellipsisOne"
          data-keyword="keyword"
           bind:tap="onSearchBtnClick"
          >{{placeholder}}</view>

        <view class="search-btn"
          bind:tap="onSearchBtnClick">
          S
        </view>
      </view>
    </view>

    <view class="system-message"
    bind:tap="onMessageClick">
      M
      <view wx:if="{{message}}" class="new-msg-remind"></view>
    </view>
  </view>
  
  <view class="search-bar-search-page flex-b" wx:if="{{type === 'searchPage'}}">
   
    <view class="search-input-search" >
      <view class="user-action-part flex-middle flex-b" >

        <input
          value="{{keyword}}"
          data-keyword="keyword"
          placeholder="{{placeholder}}"
          bindinput="onInputValueChange"
          />

      </view>
    </view>

    <view class="search-btn"
    bind:tap="toGetResult">
      <icon-font size="14" color="#fff" name="iconsousuo" />
    </view>
  </view>
</view>