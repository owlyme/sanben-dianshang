<view class="order-good-components">
  <card>
    <view class="order-status">
      <order-status-text  />
    </view>

    <view >
      <shop-card
      src="{{goodInfo.shopLogo}}"
      title="{{goodInfo.shopName}}"
      text="{{goodInfo.shopAddress}}"/>
    </view>

    <view class="good-info">
      <block wx:if="{{goodInfo.goodList.length > 1}}">
         <scroll-view
          scroll-x="true"
          style="width: 100%">
          <view
          class="good-image"
          wx:for="{{goodInfo.goodList}}"
          wx:index="{{index}}"
          >
            <image src="{{item.pic}}" />
          </view>
        </scroll-view>
      </block>

      <block wx:elif="{{goodInfo.goodList.length === 1}}">
        <good-card-info
         src="{{goodInfo.goodList[0].pic}}"
        title="{{goodInfo.ngoodList[0].ame}}"
        text="{{goodInfo.goodList[0].remark}}"/>
      </block>
    </view>

    <view class="good-price flex-b">
      <view class="buy-number">{{goodInfo.totalNumber}}</view>
      <money-text number="{{goodInfo.price}}" />
    </view>

    <view class="good-order-actions flex-b flex-middle">
      <block >
        <image class="more-order" src="/image/more-order.png" />
      </block>
      <view >
        <block>
        </block>
      </view>

    </view>

  </card>
</view>